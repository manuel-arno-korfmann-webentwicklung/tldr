<p id="notice"><%= notice %></p>

<h1>Learning Resources</h1>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @learning_resources.each do |learning_resource| %>
      <tr>
        <td><%= learning_resource.url %></td>
        <td><%= learning_resource.description %></td>
        <td><%= link_to 'Show', learning_resource %></td>
        <td><%= link_to 'Edit', edit_learning_resource_path(learning_resource) %></td>
        <td><%= link_to 'Destroy', learning_resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

